<%- include("../layouts/user_header.ejs") %>


<section class="product-tabs pt-25 pb-20 wow fadeIn animated">
    <div class="container">
        <div class="row product-grid-4">
            <% product.forEach((product,index)=>{ %>
            <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                <div class="product-cart-wrap mb-30">
                    <div class="product-img-action-wrap">
                        <div class="product-img product-img-zoom">
                            <a href="/get_productPage/<%= product._id %>">
                                <% product.product_image.forEach(image=>{%>
                                    <img class="default-img img-fluid"  src="/newfile/<%= image %>" >
                                <img class="hover-img img-fluid" src="/newfile/<%= image %>" >
                               <% }) %>
                            </a>
                        </div>
                        <div class="product-action-1">
                            <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal"><i class="fi-rs-eye"></i></a>
                            <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/"><i class="fi-rs-heart"></i></a>
                            <a aria-label="Compare" class="action-btn hover-up" href="/"><i class="fi-rs-shuffle"></i></a>
                        </div>
                    </div>
                    <div class="product-content-wrap">
                        <div class="product-category">
                            <a href="/"><%= product.product_category.name %></a>
                        </div>
                        <h2><a href="/product-details/<%= product._id %>"><%= product.product_name %></a></h2>
                        <div class="rating-result" >
                            <span>
                                <span></span>
                            </span>
                        </div>
                        <div class="product-price">
                            <span>₹ <%= product.product_regular_price %> </span>
                            <span class="old-price">₹ <%= product.product_sale_price %></span>
                        </div>
                        <div class="product-action-1 show">
                            <a aria-label="Add To Cart" class="action-btn hover-up" href="/"><i class="fi-rs-shopping-bag-add"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
     
    </div>
    </div>
</section>



<%- include("../layouts/user_footer.ejs") %>

