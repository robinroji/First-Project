<%- include("../layouts/user_header.ejs") %>

<link rel="stylesheet" href="/css/style.css"> <!-- Link to your CSS file -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }
    .orders-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }
    .profile-sidebar {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }
    .profile-sidebar h3 {
        font-size: 18px;
        margin-bottom: 20px;
        font-weight: bold;
    }
    .profile-sidebar a {
        display: block;
        padding: 10px 0;
        color: #000;
        text-decoration: none;
    }
    .profile-sidebar a:hover {
        background-color: #e9ecef;
        border-radius: 5px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #007bff;
        color: white;
        text-align: center;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    .order-info {
        margin-top: 10px;
    }
    .order-summary {
        padding: 10px;
        border: 1px solid #e0e0e0;
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-bottom: 10px;
    }
    .items-list {
        list-style: none;
        padding: 0;
    }
    .items-list li {
        margin: 15px 0;
        display: flex;
        align-items: center;
    }
    .items-list li img {
        width: 80px;
        height: auto;
        margin-right: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    .btn-bg-warning {
        background-color: #ffc107;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-align: center;
        font-size: 14px;
        text-decoration: none;
    }
    .btn-bg-warning:hover {
        background-color: #e0a800;
        color: white;
    }
</style>

<div class="orders-container">
    <h2>Your Orders</h2>

    <!-- Sidebar Section -->
    <div class="row">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <h3>Account</h3>
                <a href="#" class="nav-link">Overview</a>
                <a href="/orders" class="nav-link">My Orders</a>
                <a href="/addressPage" class="nav-link">Manage Address</a>
                <a href="#" class="nav-link">Wallet</a>
                <a href="/logout" class="nav-link">Logout</a>
            </div>
        </div>

        <!-- Orders Table Section -->
        <div class="col-md-9">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Payment Method</th>
                        <th>Delivery Address</th>
                        <th>Ordered Items</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <!-- Order Date -->
                            <td><%= order.createdAt.toLocaleDateString() %></td>

                            <!-- Payment Method -->
                            <td><%= order.payment %></td>

                            <!-- Delivery Address -->
                            <td>
                                <div class="order-info">
                                    <p><strong>House Name:</strong> <%= order.address.houseName %></p>
                                    <p><strong>Location:</strong> <%= order.address.location %></p>
                                    <p><strong>State:</strong> <%= order.address.state %></p>
                                    <p><strong>Pin Code:</strong> <%= order.address.pinCode %></p>
                                </div>
                            </td>

                            <!-- Ordered Items -->
                            <td>
                                <ul class="items-list">
                                    <% order.items.forEach(item => { %>
                                        <li>
                                            <img src="/newfile/<%= item.images %>" alt="Product Image">
                                            <div>
                                                <strong>Product:</strong> <%= item.productName %><br>
                                                <strong>Quantity:</strong> <%= item.quantity %><br>
                                                <strong>Sale Price:</strong> <%= item.salePrice %>
                                            </div>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>

                            <!-- View Order Button -->
                            <td>
                                <a href="/Order_DetailPage/<%=order._id %>" class="btn-bg-warning">View Order</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("../layouts/user_footer.ejs") %>
