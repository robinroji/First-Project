<%- include("../layouts/user_header.ejs") %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
   
</style>
<body>
    <div class="container my-5 pb-50 pt-4" style="background-color: lightgray;">
        <h2 class="text-center mb-4">Your Wallet</h2>

        <% if (wallet) { %> 
            <!-- Wallet Balance Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <h4>Wallet Balance: ₹<%= wallet.balance %></h4>
                </div>
            </div>

            <!-- Recent Transactions Section -->
            <div class="card">
                <div class="card-header">
                    <h5>Recent Transactions</h5>
                </div>
                <div class="card-body">
                    <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>NO:</th>
                                    <th>Type</th>
                                    <th>Amount (₹)</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Transaction On</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wallet.transactions.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).forEach((transaction, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td class="<%= transaction.type === 'credit' ? 'text-success' : 'text-danger' %>">
                                            <%= transaction.type %>
                                        </td>
                                        <td><%= transaction.amount %></td>
                                        <td><%= transaction.status %></td>
                                        <td><%= new Date(transaction.createdAt).toLocaleString() %></td>
                                        <td><%= transaction.walletFrom %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p class="text-center">No transactions found.</p>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p class="text-center">Wallet not found.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<%- include("../layouts/user_footer.ejs") %>
