<%- include('../layouts/admin_header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Coupons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Available Coupons</h2>
        <div>
            <a href="/admin/load_add_Coupen" class="btn btn-primary">Add Coupon</a>
        </div>
        <br>

        <% if (coupens.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>Coupon Code</th>
                            <th>Discount (%)</th>
                            <th>Expiry Date</th>
                            <th>Minimum Order Value</th>
                            <th>Status</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coupens.forEach(coupon => { %>
                            <tr>
                                <td><strong><%= coupon.code %></strong></td>
                                <td><%= coupon.discountPercentage %> %</td>
                                <td><%= new Date(coupon.expiryDate).toLocaleDateString() %></td>
                                <td>$<%= coupon.minimumPurchaseAmount %></td>
                                <td>
                                    <% if (new Date(coupon.expiryDate) > new Date()) { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Expired</span>
                                    <% } %>
                                </td>
                                <td><a href="/admin/load_edit_Coupen/<%= coupon.id %>" class="btn btn-danger btn-outline-primary">
                                    <i class="fas fa-edit"></i></td>
                                    

                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                No coupens available at the moment.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




<%- include('../layouts/admin_footer.ejs') %>

