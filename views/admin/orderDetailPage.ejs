<%- include('../layouts/admin_header.ejs') %>

<title>Order Management</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<style>
    body {
        background-color: #2c3e50;
        color: white;
    }
    .table th, .table td {
        vertical-align: middle;
    }
    .status-active {
        background-color: #28a745;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
    }
    .order-details-container {
        padding: 1rem;
        background-color: #34495e;
        border-radius: 0.5rem;
    }
    .product-image {
        width: 50px;
        height: auto;
        margin-right: 5px;
    }
</style>
</head>
<body>
    <div class="container my-4">
        <h1>Order Details</h1>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <input type="text" class="form-control w-25" placeholder="Search Orders...">
            <button class="btn btn-success">+ Add Order</button>
        </div>

        <table class="table table-dark table-bordered">
            <thead>
                <tr>
                    
                    <th>User Name</th>
                    <th>Products</th>
                    <th>Status</th>
                    <th>Total Price</th>
                    <th>Address</th>
                    <th>Cancel</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                
                    <td><%= order.user.firstname %></td>
                    
                    <!-- Display multiple products in a single cell -->
                    <td>
                        <% order.items.forEach(item => { %>
                            <div class="d-flex align-items-center mb-2">
                                <img src="/newfile/<%= item.images %>" alt="Product Image" class="product-image me-2">
                                <span><%= item.productName %></span>
                            </div>
                        <% }) %>
                    </td>
                    
                    <td>
                        <span class="status-active"><%= order.status %></span>
                    </td>
                    <td>
                        â‚¹<%= order.items.reduce((acc, item) => acc + item.salePrice, 0) %> <!-- Calculate total price -->
                    </td>
                    <td>
                        <%= order.address.houseName %><br>
                        <%= order.address.pinCode %><br>
                        <%= order.address.po %><br>
                        <%= order.address.location %><br>
                        <%= order.address.state %>
                    </td>
                    <td>
                        <form action="/admin/delete_order/<%= order._id %>" method="POST" style="display: inline;">
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this order?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
        
                <!-- Order Details Row -->
                <tr>
                    <td colspan="7">
                        <div class="order-details-container">
                            <p><strong>Order ID:</strong> <%= order._id %></p>
                            <p><strong>Status:</strong> <%= order.status %></p>
                            <form action="/admin/updateStatus/<%= order._id %>" method="POST">
                                <div class="mb-2">
                                    <label for="status-<%= order._id %>">Update Status:</label>
                                    <select id="status-<%= order._id %>" name="status" class="form-select w-auto">
                                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>

<%- include('../layouts/admin_footer.ejs') %>
