<%- include('../layouts/admin_header.ejs') %>

<style>
    body {
        background-color: #1c1f3e;
        color: #fff;
        font-family: Arial, sans-serif;
    }
    .table-container {
        margin: 30px;
    }
    .table {
        background-color: #2b305e;
        border-radius: 8px;
    }
    .table thead th {
        color: #fff;
    }
    .table td, .table th {
        color: #ccc;
        padding: 12px;
        vertical-align: middle;
    }
    .table td img {
        width: 50px;
        height: 50px;
        border-radius: 8px;
    }
    .table .btn {
        background-color: transparent;
        border: none;
    }
    .table .btn i {
        color: #fff;
    }
    .search-box {
        position: relative;
    }
    .search-box input {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: none;
        background-color: #2b305e;
        color: #fff;
    }
    .search-box i {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        color: #ccc;
    }
    .add-btn {
        background-color: #17a2b8;
        color: #fff;
        margin: 20px 0;
    }
</style>

<div class="container-fluid table-container">
    <h2>Orders</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="search-box">
                <input type="text" class="form-control" placeholder="Search orders...">
                <i class="fas fa-search"></i>
            </div>
        </div>
        <div class="col-md-6 text-right">
            <a href="/add-order" class="btn add-btn"><i class="fas fa-plus"></i> Add Order</a>
        </div>
    </div>

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Customer</th>
                <th>Item Image</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Selling Price</th>
                <th>Payment Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach((order, index) => { %>
                <% order.items.forEach((item, itemIndex) => { %>
                    <tr>
                        <% if (itemIndex === 0) { %>
                            <!-- First item of the order: show order details -->
                            <td rowspan="<%= order.items.length %>"><%= index + 1 %></td>
                            <td rowspan="<%= order.items.length %>"><%= order.user.firstname %></td>
                        <% } %>

                        <td>
                            <img src="/newfile/<%= item.images[0] %>" alt="Product Image">
                        </td>

                        <td><%= item.productName %></td>

                        <td><%= item.quantity %></td>

                        <td><%= item.price %></td>

                        <% if (itemIndex === 0) { %>
                            <!-- Only show payment and actions once for the entire order -->
                            <td rowspan="<%= order.items.length %>"><%= order.paymentMethod %></td>
                            <td rowspan="<%= order.items.length %>">
                                <a href="/admin/edit_order/<%= order._id %>", id="edit" class="btn"><i class="fas fa-edit"></i></a>
                                <span> </span>
                                <!-- <a href="/delete-order/<%= order._id %>" class="btn"><i class="fas fa-trash"></i></a> -->
                            </td>
                        <% } %>
                    </tr>
                <% }) %>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
