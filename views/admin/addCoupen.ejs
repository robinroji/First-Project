<%- include('../layouts/admin_header.ejs') %>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Coupon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>Add New Coupon</h3>
            </div>
            <div class="card-body">
                <form action="/admin/add_Coupen" method="POST">
                    <!-- Coupon Code -->
                    <div class="mb-3">
                        <label for="couponCode" class="form-label">Coupon Code</label>
                        <input type="text" class="form-control" id="couponCode" name="couponCode" placeholder="Enter coupon code" required>
                    </div>

                    <!-- Discount Percentage -->
                    <div class="mb-3">
                        <label for="discount" class="form-label">Discount Percentage (%)</label>
                        <input type="number" class="form-control" id="discount" name="discount" placeholder="Enter discount percentage" required min="1" max="100">
                    </div>

                    <!-- Expiry Date -->
                    <div class="mb-3">
                        <label for="expiryDate" class="form-label">Expiry Date</label>
                        <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                    </div>

                    <!-- Minimum Order Value -->
                    <div class="mb-3">
                        <label for="minOrderValue" class="form-label">Minimum Order Value</label>
                        <input type="number" class="form-control" id="minOrderValue" name="minOrderValue" placeholder="Enter minimum order value" required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success">Add Coupon</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<%- include('../layouts/admin_footer.ejs') %>
