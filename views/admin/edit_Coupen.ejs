<%- include('../layouts/admin_header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Coupons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Available Coupons</h2>
        <div>
            <a href="/admin/load_add_Coupen" class="btn btn-primary">Add Coupon</a>
        </div>
        <br>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Coupon Code</th>
                        <th>Discount (%)</th>
                        <th>Expiry Date</th>
                        <th>Minimum Order Value</th>
                        <th>Status</th>
                        <th>Action</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                   
                        <tr>
                            <form action="/admin/edit_Coupen/<%= coupens._id %>" method="POST">
                                <td>
                                    <input type="text" class="form-control" name="code" value="<%= coupens.code %>" required>
                                </td>
                                <td>
                                    <input type="number" class="form-control" name="discountPercentage" value="<%= coupens.discountPercentage %>" required>
                                </td>
                                <td>
                                    <input type="date" class="form-control" name="expiryDate" value="<%= coupens.expiryDate.toISOString().substring(0, 10) %>" required>
                                </td>
                                <td>
                                    <input type="number" class="form-control" name="minimumPurchaseAmount" value="<%= coupens.minimumPurchaseAmount %>" required>
                                </td>
                                <td>
                                    <% if (new Date(coupens.expiryDate) > new Date()) { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Expired</span>
                                    <% } %>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-success">Save</button>
                                </td>

                            </form>

                            <td>
                                <form action="/admin/delete/<%= coupens._id %>" method="POST">
                                    <button type="submit" class="btn btn-link p-0" style="border: none; background: none;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                            
                        </tr>
                    
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('../layouts/admin_footer.ejs') %>
